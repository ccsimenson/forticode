{
  "name": "forticode",
  "version": "1.0.0",
  "description": "An Electron-based security auditing tool for CSP compliance.",
  "main": "./dist/main/main.js",
  "bin": {
    "forticode": "./cli.js"
  },
  "type": "commonjs",
  "_moduleAliases": {
    "@modules": "./dist/modules"
  },
  "electron": {
    "main": "./dist/main/main.js"
  },
  "author": "Cory C.",
  "license": "MIT",
  "homepage": "https://github.com/ccsimenson/forticode#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ccsimenson/forticode.git"
  },
  "bugs": {
    "url": "https://github.com/ccsimenson/forticode/issues"
  },
  "keywords": [
    "electron",
    "security",
    "audit",
    "csp",
    "content-security-policy",
    "vulnerability",
    "scanner"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run build:main && npm run build:renderer",
    "build:preload": "node scripts/build-preload.cjs",
    "build:main": "node scripts/build-main-simple.cjs",
    "build:renderer": "vite build",
    "dev": "cross-env NODE_ENV=development PORT=5173 electronmon . --inspect=9229 --no-sandbox --enable-logging=stderr --trace-warnings",
    "start": "electron .",
    "watch:main": "tsc -w -p tsconfig.main.json",
    "watch:renderer": "vite --host",
    "preview": "vite preview --port 3000",
    "package": "npm run build && electron-builder build --dir",
    "dist": "npm run build && electron-builder build",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint --ext .ts,.tsx .",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:update": "vitest -u",
    "test:debug": "vitest debug",
    "test:simple": "vitest src/__tests__/simple.test.ts",
    "cli": "node cli.js"
  },
  "build": {
    "appId": "com.forticode.security.auditor",
    "productName": "FortiCode",
    "copyright": "Copyright Â© 2025 Cory C. Simenson.",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "publishConfig": {
    "provider": "github",
    "owner": "ccsimenson",
    "repo": "forticode"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "@babel/preset-react": "^7.24.1",
    "@babel/preset-typescript": "^7.24.1",
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron/rebuild": "^3.7.1",
    "@emotion/babel-plugin": "^11.13.5",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@types/ini": "^4.1.1",
    "@types/node": "^20.17.50",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "electronmon": "^2.0.3",
    "esbuild": "0.25.4",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "postcss": "^8.4.38",
    "prettier": "^3.0.0",
    "sass": "^1.69.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^4.4.9",
    "vite-plugin-electron": "^0.11.2",
    "vite-plugin-electron-renderer": "^0.13.8",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "@mantine/core": "^7.13.0",
    "@mantine/hooks": "^7.13.0",
    "@mantine/notifications": "^7.13.0",
    "@mantine/spotlight": "^7.13.0",
    "@monaco-editor/react": "^4.7.0",
    "@tabler/icons-react": "^3.3.0",
    "@tanstack/react-query": "^5.62.0",
    "@tanstack/react-query-devtools": "^5.62.0",
    "axios": "^1.7.2",
    "electron-devtools-installer": "^3.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "module-alias": "^2.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.0",
    "yargs": "^17.7.2",
    "zod": "^3.23.8"
  }
}
