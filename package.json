{
  "name": "forticode",
  "version": "1.0.0",
  "description": "An Electron-based security auditing tool for CSP compliance.",
  "main": "./dist/main/index.js",
  "type": "commonjs",
  "electron": {
    "main": "./dist/main/index.js"
  },
  "author": "Cory C.",
  "license": "MIT",
  "homepage": "https://github.com/ccsimenson/forticode#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ccsimenson/forticode.git"
  },
  "bugs": {
    "url": "https://github.com/ccsimenson/forticode/issues"
  },
  "keywords": [
    "electron",
    "security",
    "audit",
    "csp",
    "content-security-policy",
    "vulnerability",
    "scanner"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run build:main && tsc -p tsconfig.main.json && vite build",
    "build:preload": "node scripts/build-preload.cjs",
    "build:main": "node scripts/build-main.cjs",
    "dev": "cross-env NODE_ENV=development PORT=5173 electronmon .",
    "start": "electron .",
    "watch:main": "tsc -w -p tsconfig.main.json",
    "watch:renderer": "vite --host",
    "preview": "vite preview --port 3000",
    "package": "npm run build && electron-builder build --dir",
    "dist": "npm run build && electron-builder build",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint --ext .ts,.tsx .",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "test": "jest"
  },
  "build": {
    "appId": "com.forticode.security.auditor",
    "productName": "FortiCode",
    "copyright": "Copyright Â© 2025 Cory C. Simenson.",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "publishConfig": {
    "provider": "github",
    "owner": "ccsimenson",
    "repo": "forticode"
  },
  "devDependencies": {
    "@electron/notarize": "^3.0.1",
    "@types/electron": "^1.4.38",
    "@types/express-session": "^1.18.1",
    "@types/ini": "^4.1.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.18",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.6.2",
    "electronmon": "^2.0.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.3",
    "find-port": "^3.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-node-polyfills": "^0.23.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@monaco-editor/react": "^4.7.0",
    "@mui/icons-material": "^7.1.0",
    "@mui/material": "^7.1.0",
    "@octokit/auth-app": "^7.2.1",
    "@octokit/auth-oauth-app": "^8.1.4",
    "@octokit/auth-token": "^5.1.2",
    "@octokit/webhooks": "^13.9.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "cors": "^2.8.5",
    "electron-devtools-installer": "^3.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "esbuild": "0.25.4",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "helmet": "^8.1.0",
    "ini": "^5.0.0",
    "node-fetch": "^2.7.0",
    "rate-limit": "^0.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.30.0",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "yaml": "^2.8.0"
  }
}
