{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "resolveJsonModule": true,
    "outDir": "../dist/main",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@main/*": ["src/main/*"],
      "@renderer/*": ["src/renderer/*"],
      "@shared/*": ["src/shared/*"],
      "@main/security/*": ["src/main/security/*"],
      "@modules/*": ["src/modules/*"]
    },
    "types": ["node", "electron"],
    "tsBuildInfoFile": "dist/main/tsconfig.tsbuildinfo",
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/main/**/*.ts",
    "src/shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}
