{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist/main/",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@main/*": ["src/main/*"],
      "@renderer/*": ["src/renderer/*"],
      "@shared/*": ["src/shared/*"],
      "@main/security/*": ["src/main/security/*"],
      "@modules/*": ["src/modules/*"]
    },
    "types": ["node", "electron"],
    "tsBuildInfoFile": "dist/main/tsconfig.tsbuildinfo",
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/main/index.ts",
    "src/main/main.ts",
    "src/main/preload.ts",
    "src/main/security/**/*.ts",
    "src/shared/**/*.ts",
    "src/modules/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
